<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - <%= appData.appName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body>
    <div class="container">
        <header>
            <h1>Registered Users</h1>
        </header>

        <nav class="breadcrumb">
            <a href="/">Home</a> &gt; <a href="/dashboard">Dashboard</a> &gt; Users
        </nav>

        <main class="content">
            <% if (users.length === 0) { %>
                <p class="no-data">No users registered yet.</p>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Joined</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.first_name %></td>
                                <td><%= user.last_name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.created_at ? new Date(user.created_at).toLocaleDateString() : '-' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </main>

        <footer>
            <p><a href="/">Home</a> | <a href="/dashboard">Dashboard</a> | <a href="/logout">Logout</a></p>
            <p>&copy; 2024 <%= appData.appName %></p>
        </footer>
    </div>
</body>
</html>
